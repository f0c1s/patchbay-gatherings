GatheringNew {
  --br: 5px
  --boundary: 1rem
  --feature-color: hsla(295, 67%, 60%, 1)
  --font: sans, arial

  font-family: var(--font)
  max-width: 1000px

  display: grid
  grid-template-columns: 1fr
  grid-template-rows: auto auto
  grid-column-gap: 1rem
  grid-row-gap: 0

  h1 {
    text-transform: uppercase
    font-size: .8rem
    letter-spacing: .1rem
    color: #fff
  }

  div.details {
    border-radius: var(--br)
  
    padding: var(--boundary)
    background: hsla(0, 100%, 100%, .1)

    min-height: 20vh

    display: grid
    grid-template-columns: auto 1fr
    grid-gap: 2rem
    justify-content: start
    align-content: start
    align-items: center

    label {
      color: #fff
      font-size: .9rem
      filter: drop-shadow(0 0 2px hsla(0,100%,0%,0.1))
      letter-spacing: 1px
      font-weight: 600
      text-transform: uppercase
    }

    (input, textarea) {
      font-family: var(--font)
      background: #fff
      padding: .5rem
      border: none
      outline: none
    }

    div.time-input {
      display: grid
      grid-template-columns: auto 350px
      grid-template-rows: auto auto
      grid-gap: 1rem
      justify-content: start

      div.GatheringDayPicker {
        grid-column: 1
        grid-row: 1 / 3
      }

      div.time-picker {
        grid-column: 2
        grid-row: 1 / 2

        color: #fff
        background: hsla(0, 0%, 100%, .3)
        border-radius: var(--br)

        display: grid
        grid-template-rows: auto 1fr auto
        align-items: start

        div.timezone {
          padding: var(--boundary)
          border-top: hsla(0, 0%, 100%, .5) 1px dashed

          label {}

          div.zone {
            margin-top: .3rem

            font-weight: 600
            display: flex
            align-items: center

            span {
              margin-left: .5rem
              font-weight: initial
              font-size: .8rem
            }
          }
        }
      }
    }
  }

  div.actions {
    justify-self: end
    margin-top: 2rem

    display: flex
  }
}
